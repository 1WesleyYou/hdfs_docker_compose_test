<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
  <!-- NameNode HA -->
  <property>
    <name>dfs.nameservices</name>
    <value>cluster1</value>
  </property>
  <property>
    <name>dfs.ha.namenodes.cluster1</name>
    <value>nn1,nn2</value>
  </property>
  <property>
    <name>dfs.namenode.rpc-address.cluster1.nn1</name>
    <value>nn1:9000</value>
  </property>
  <property>
    <name>dfs.namenode.rpc-address.cluster1.nn2</name>
    <value>nn2:9001</value>
  </property>
  <property>
    <name>dfs.namenode.http-address.cluster1.nn1</name>
    <value>nn1:9870</value>
  </property>
  <property>
    <name>dfs.namenode.http-address.cluster1.nn2</name>
    <value>nn2:9871</value>
  </property>

  <!-- shared edits directory, store EditLog -->
  <property>
    <name>dfs.namenode.shared.edits.dir</name>
    <value>file:///hadoop/shared-edits</value>
  </property>

  <!-- name node storage on local disk, including fsimage and EditLog -->
  <property>
    <name>dfs.namenode.name.dir</name>
    <value>file:///hadoop/nn1,file:///hadoop/nn1-fail</value>
  </property>

  <property>
    <name>dfs.datanode.data.dir</name>
    <value>file:///hadoop/dn</value>
  </property>
</configuration>